<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="RegistrationPageController"
            prefHeight="600.0" prefWidth="800.0">
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="286.0" layoutY="43.0" prefHeight="65.0" prefWidth="228.0" text="CloudStorage" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <Label fx:id="warning"
           layoutX="286.5" layoutY="180.0"
           style="-fx-text-fill:black; -fx-font-size: 15; -fx-font-weight: bold"></Label>
    <Label layoutX="286.0" layoutY="234.0" prefHeight="17.0" prefWidth="228.0" text="Login" />
    <TextField onAction="#makeRegistration" fx:id="login"
               layoutX="286.0" layoutY="251.0" prefHeight="25.0" prefWidth="228.0" />
    <Label layoutX="286.0" layoutY="286.0" prefHeight="17.0" prefWidth="228.0" text="Password" />
    <PasswordField onAction="#makeRegistration"  fx:id="password"
                   layoutX="286.0" layoutY="303.0" prefHeight="25.0" prefWidth="228.0" />
    <Label layoutX="286.0" layoutY="338.0" prefHeight="17.0" prefWidth="228.0" text="Password" />
    <PasswordField onAction="#makeRegistration"  fx:id="confirmPassword"
                   layoutX="286.0" layoutY="355.0" prefHeight="25.0" prefWidth="228.0" />
    <Button onAction="#makeRegistration" fx:id="makeRegistrationButton"
            layoutX="362.0" layoutY="393.0" mnemonicParsing="false" text="Make Account" />
    <Button onAction="#cancelRegistration" fx:id="cancelRegistrationButton"
            layoutX="454.0" layoutY="393.0" mnemonicParsing="false" text="Go back" />

</AnchorPane>
